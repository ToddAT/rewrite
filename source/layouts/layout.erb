<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta property="og:type" content="article" />
    <meta name="twitter:site" content="@RewriteBlog">
    <meta name="twitter:creator" content="@toddterwilliger">
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:url" content="http://blog.rewrit.es<%= url_for current_page %>" />
    <meta name="twitter:title" content="<%= current_article.title + ' | ' unless current_article.nil? %>RewritesRewritesRewrites" />
    
    <% if current_article.nil? %>
    <meta name="twitter:description" content="On Writing and Other Creative Arts" />
    <meta property="og:description" content="On Writing and Other Creative Arts" />
    <% else %>
    <meta name="twitter:description" content="<%= strip_tags(current_article.summary) %>" />
    <meta property="og:description" content="<%= strip_tags(current_article.summary) %>" />
    <% end %>

    <meta property="og:url" content="http://blog.rewrit.es<%= url_for current_page %>" />
    <meta property="og:title" content="<%= current_article.title + ' | ' unless current_article.nil? %>RewritesRewritesRewrites" />

    <% if current_article %>
    <meta name="twitter:image" content="<%= "http://blog.rewrit.es" + current_article.data.image if current_article.data.image? %>" />
    <meta property="og:image" content="<%= "http://blog.rewrit.es" + current_article.data.image if current_article.data.image? %>" />
    <% end %>

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_article.title + ' | ' unless current_article.nil? %>RewritesRewritesRewrites</title>

    <!-- Use title if it's in the page YAML frontmatter -->
    <link href="http://fonts.googleapis.com/css?family=Droid+Serif:700|Open+Sans+Condensed:300,300italic,700" rel="stylesheet" type="text/css">

    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <%= stylesheet_link_tag "normalize", "rewrite" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <header id="site-header">
      <h1 id="site-name"><a href="#">RewritesRewritesRewrites</a></h1>
    </header>

    <section id="site-body">
      <%= yield %>
    </section>

    <footer id="site-footer">
      <p id="site-license">&copy; 2015 by the author. All rights reserved.</p> 
    </footer>
  </body>
</html>
